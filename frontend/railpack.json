{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": ["bun install"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["bun run build"]
    }
  },
  "deploy": {
    "startCommand": "bun run preview -- --host 0.0.0.0 --port $PORT"
  }
}
